pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/cloudvaishu/jenkins-static-site.git'
            }
        }
        stage('Deploy') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ec2-key', keyFileVariable: 'KEY')]) {
                    sh 'scp -i $KEY -o StrictHostKeyChecking=no -r staticweb/index.html staticweb/style.css ubuntu@13.211.104.89:/var/www/html/'
                }
            }
        }
    }
}

