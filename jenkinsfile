pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/cloudvaishu/jenkins-static-site.git'
            }
        }
        stage('Deploy') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: 'ec2-key', keyFileVariable: 'KEY')]) {
                    sh '''
                        scp -i $KEY -o StrictHostKeyChecking=no staticweb/index.html staticweb/style.css ubuntu@15.134.129.229:/tmp/
                        ssh -i $KEY -o StrictHostKeyChecking=no ubuntu@15.134.129.229 "sudo mv /tmp/index.html /var/www/html/ && sudo mv /tmp/style.css /var/www/html/"
                    '''
                }
            }
        }
    }
}
